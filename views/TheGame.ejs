    <!-- Settings Panel -->
    <div class="settings">
      <p class="music">MUSIC</p>
      <p class="ON">ON</p>
      <p class="OFF">OFF</p>
      <p class="time-setting">TIME</p>
      <p class="time-on">ON</p>
      <p class="time-off">OFF</p>
      <p class="lvl">LEVELS</p>
      <p class="easy">EASY</p>
      <p class="hard">HARD</p>
    </div>

    <!-- Time Display -->
    <div class="time">00:00:00</div>

    <div class="sidebar">
      <h2>RPS BATTLE</h2>
      <div class="menu">
        <a href="#">Play</a>
        <a href="#">Lobby</a>
        <a href="#">Tournaments</a>
        <a href="#">Settings</a>
      </div>
    </div>

    <div class="sidebar">
      <h2>RPS BATTLE</h2>
      <div class="menu">
        <a href="#">Play</a>
        <a href="#">Lobby</a>
        <a href="#">Tournaments</a>
        <a href="#">Settings</a>
      </div>
    </div>

    <div class="main">
      <div class="battle-area">
        <div class="player">
          <div class="player-lives life">
            <h4><%= playerName %></h4>
            <div class="player-score score">0</div>
          </div>
          <div class="emoji playeremoji">‚úä</div>
          <p><%= playerName %></p>
        </div>
        <div class="vs">VS</div>
        <div class="opponent">
          <div class="computer-lives life">
            <h4>Computer</h4>
            <div class="computer-score score">0</div>
          </div>
          <div class="emoji  computeremoji">‚úä</div>
          <p>Computer</p>
        </div>
      </div>

      <div class="choices">
        <button type="button" class="player-chioce" data-id="rock">‚úä Rock</button>
        <button type="button" class="player-chioce" data-id="paper">‚úã Paper</button>
